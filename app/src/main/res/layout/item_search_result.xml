<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/colorPrimary">

    <ImageView
        android:id="@+id/item_search_result_cover"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:contentDescription="@string/rv_song_cover_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_search_result_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_search_result_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_bold"
        android:maxLines="2"
        android:textColor="@color/topSongsTextColor"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/item_search_result_channel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_search_result_cover"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Monsters G Bump" />

    <TextView
        android:id="@+id/item_search_result_channel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:alpha="0.7"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/songsArtistTextColor"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_search_result_cover"
        app:layout_constraintTop_toBottomOf="@id/item_search_result_title"
        tools:text="ERIKA RECINOS" />

</androidx.constraintlayout.widget.ConstraintLayout>