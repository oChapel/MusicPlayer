<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?android:attr/colorPrimary"
    android:padding="5dp">

    <ImageView
        android:id="@+id/top100_song_cover"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:contentDescription="@string/rv_song_cover_desc"
        app:layout_constraintBottom_toTopOf="@id/top100_song_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/top100_song_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/gilroy_medium"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="@color/topSongsTextColor"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/top100_song_artist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top100_song_cover"
        tools:text="Origins" />

    <TextView
        android:id="@+id/top100_song_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:fontFamily="@font/gilroy_medium"
        android:gravity="center"
        android:textColor="@color/songsArtistTextColor"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top100_song_title"
        tools:text="IMAGINE DRAGONS" />

</androidx.constraintlayout.widget.ConstraintLayout>